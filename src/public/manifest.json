{
    "manifest_version": 3,
    "name": "Copilot Extention",
    "version": "0.1.0",
    "description": "あなたのChatGPTライフに寄り添うパートナー。",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chatgpt.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/components/*"
            ],
            "matches": [
                "https://chatgpt.com/*"
            ]
        }
    ]
}